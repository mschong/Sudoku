<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="Board Size"
        android:summary="Select the size of the Sudoku board"
        android:key="@string/boardSizePref"
        android:defaultValue="4"
        android:entries="@array/boardSizeArray"
        android:entryValues="@array/boardSizeValues" />

    <ListPreference
        android:title="Game Difficulty"
        android:summary="Choose your Sudoku Challenge"
        android:key="gameDifficultyPref"
        android:defaultValue="1"
        android:entries="@array/gameDifficultyArray"
        android:entryValues="@array/gameDifficultyValues" />

</PreferenceScreen>